<div class="article__header">
  <h1>Articles</h1>
  <%= link_to "New Article", new_article_path %>
</div>

<ul class="articles">
  <% @articles.reverse_each do |article| %>
    <li class="article__card">
      <div class="article-title__wrapper">
        <%= link_to article.title, article %>
        <%= article.created_at.strftime('%m/%d/%Y') %>
      </div>
      <%= article.body %>
    </li>
  <% end %>
</ul>