<div class="article__header">
  <h1>Articles</h1>
  <%= link_to "New Article", new_article_path %>
</div>

<ul class="articles">
  <% @articles.reverse_each do |article| %>
    <li class="article__card">
      <%= link_to article.title, article %>
      <%= article.body %>
    </li>
  <% end %>
</ul>